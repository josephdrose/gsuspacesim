package spacesim

import spacesim.Ship

rule "Start Moving"
	no-loop
	when
		s:Ship(forwardThrust==false, enemyShip!=null)
	then 
		s.forwardThrust=true;
		s.angle=s.ea;
		update(s);
end

rule "Sling Shot Fire"
	when
		s:Ship((ed<600 && ed<200), fireMissile==false)
	then
		s.fireMissile=true;
		update(s);
end

rule "Fire"
	when
		s:Ship(ed<100, fireMissile==false)
	then
		s.fireMissile=true;
		update(s);
end
