rule "You have won or draw"
	no-loop
	when
		s:Ship(enemyMissile.alive==false, enemyShip.alive==false, 
			eval(Math.abs(dx)>=0.01||Math.abs(dy)>=0.01))
	then
		s.angle=Util.angle(0, 0, s.dx, s.dy)-181;
		update(s);
end